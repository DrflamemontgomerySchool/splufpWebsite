extends layout-bootstrap

block head_additional
  link(rel='stylesheet' href='/stylesheets/docs.css')
  block doc_head_additional

block content-container
  div(class='d-flex flex-row align-items-stretch no-overflow-x')
    if sidebar
      div(class='d-inline-flex flex-column')
        for link in sidebar
          ul(class='dropdown-menu show light' style='min-width: 20vw; margin: 10px 10px; position: relative;')
            if link.header
              li
                h6(class='light dropdown-header responsive')= link.header
              li
                hr(class='dropdown-divider')
            if link.children
              for child in link.children
                li
                  if active_link == child.link
                    a(class='active nav-hover-hint light dropdown-item responsive')= child.name
                  else
                    a(class='inactive nav-hover-hint light dropdown-item responsive' href=child.link)= child.name
    div(class='d-inline-flex flex-column justify-content-start' style='padding: 10px 30px 10px;')
      block doc_content
      h1= active_link
